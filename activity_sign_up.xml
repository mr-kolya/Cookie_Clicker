<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/sign_up_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/sign_up"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/sign_up_user_login"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/sign_up_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:hint="@string/enter_username"
        android:inputType="text" />

    <EditText
        android:id="@+id/sign_up_user_password"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/sign_up_user_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/create"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_user_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/create"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />

    <Button
        android:id="@+id/sign_up_exit"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/exit"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />


</RelativeLayout>
