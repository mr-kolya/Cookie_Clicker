<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/login"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />

    <Button
        android:id="@+id/new_game"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/new_game"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />

    <Button
        android:id="@+id/main_continue"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_game"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/continue_"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />
    <Button
        android:id="@+id/about"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/about"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />


    <Button
        android:id="@+id/main_exit"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:backgroundTint="@color/Button_color"
        android:onClick="onClick"
        android:text="@string/exit"
        android:textColor="@color/black"
        android:textSize="@dimen/Text_size" />

    <ImageView
        android:id="@+id/imgCookie"
        android:layout_centerHorizontal="true"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/main_exit"
        android:layout_marginTop="80dp"
        android:src="@drawable/cookie" />
</RelativeLayout>
